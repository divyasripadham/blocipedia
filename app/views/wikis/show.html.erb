<h1>Wikis show</h1>
<div class="row">
  <% if user_authorized_to_edit_wikis? %>
    <div class="col-md-4">
      <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
    </div>
  <% end %>
  <% if policy(@post).destroy? %>
    <div class="col-md-4">
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    </div>
  <% end %>
  <div class="col-md-8">

      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= @wiki.title %>
          </h4>
          <h5 class="media-heading">
            <%= @wiki.body %>
          </h5>
          <small>
            <%= private_topic?(@wiki) %> topic, Created <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.username %>
          </small>
        </div>
      </div>
  </div>
</div>
