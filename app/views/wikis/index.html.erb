<h1>Wikis</h1>
<div class="row">
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div>
  <% end %>
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <%= link_to wiki.title, wiki %>
          <br>
          <small>
            <%= private_topic?(wiki) %> topic, Updated <%= time_ago_in_words(wiki.updated_at) %> ago, Created <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.username %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>
