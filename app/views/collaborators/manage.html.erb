<br>
<div class="row">&nbsp;</div>
<div class="row">
  <h4>Current Collaborators</h4>
</div>
<table>
  <tr>
    <th style="padding:0 15px 0 15px;">User Name</th>
    <th style="padding:0 15px 0 15px;">Email</th>
    <th style="padding:0 15px 0 15px;">Action</th>
  </tr>
  <% @collaborators.each do |collab| %>
    <tr>
      <td style="padding:0 15px 0 15px;"><%= collab.username %></td>
      <td style="padding:0 15px 0 15px;"><%= collab.email %></td>
      <td style="padding:0 15px 0 15px;"><%= link_to "Delete", [@wiki, collab], method: :delete, data: { confirm: 'Are you sure you want to delete this collaborator?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<div class="row">&nbsp;</div>
<div class="row">
  <h4>Add Collaborators</h4>
</div>
<%= form_tag manage_wiki_collaborators_path, :method=> "get" do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
    <small>
      Number of users found: <%= @users.count %>
    </small>
<% end %>
<div class="row">&nbsp;</div>
<table>
  <tr>
    <th style="padding:0 15px 0 15px;">User Name</th>
    <th style="padding:0 15px 0 15px;">Email</th>
    <th style="padding:0 15px 0 15px;">Action</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td style="padding:0 15px 0 15px;"><%= user.username %></td>
      <td style="padding:0 15px 0 15px;"><%= user.email %></td>
      <td style="padding:0 15px 0 15px;"><%= link_to "Add", wiki_collaborators_path, :method => :post %></td>
    </tr>
  <% end %>
</table>
